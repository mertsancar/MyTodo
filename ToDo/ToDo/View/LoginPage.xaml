<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDo.View.LoginPage"
             Title="Login">

    <StackLayout>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="ToDo" FontSize="Header" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"></Label>
            <Entry Placeholder="Username" Text="{Binding Username}"></Entry>
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" ></Entry>
            <StackLayout>
                <Button Text="Login" Command="{Binding UserAuthCommand}"></Button>
                <Button Text="Signup" Command="{Binding AddUserCommand}"></Button>
            </StackLayout>
        </StackLayout>
    </StackLayout>
    
</ContentPage>